<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/StoreFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.gamification.GamificationStoreFragment">

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivButtonBackStoreScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtStoreTitle"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivPointsBackgroundStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:src="@drawable/fundo_medio_branco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivStoreToldo" />

    <TextView
        android:id="@+id/tvPointsValueStoreScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VocÃª tem 10 pontos"
        app:layout_constraintBottom_toBottomOf="@+id/ivPointsBackgroundStore"
        app:layout_constraintEnd_toEndOf="@+id/ivPointsBackgroundStore"
        app:layout_constraintStart_toStartOf="@+id/ivPointsBackgroundStore"
        app:layout_constraintTop_toTopOf="@+id/ivPointsBackgroundStore" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="472dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivPointsBackgroundStore">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivAvatarGraceStore"
                android:layout_width="328dp"
                android:layout_height="116dp"
                android:src="@drawable/store_avatar_three_image" />

            <ImageView
                android:id="@+id/ivButtonBuyGrace"
                android:layout_width="515dp"
                android:layout_height="wrap_content"
                android:src="@drawable/store_buy_button" />

            <ImageView
                android:id="@+id/ivStoreSpaceOne"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/background_representante" />

            <ImageView
                android:id="@+id/ivAvatarFloraStore"
                android:layout_width="328dp"
                android:layout_height="116dp"
                android:src="@drawable/store_avatar_one_image" />

            <ImageView
                android:id="@+id/ivButtonBuyFlora"
                android:layout_width="515dp"
                android:layout_height="wrap_content"
                android:src="@drawable/store_buy_button" />

            <ImageView
                android:id="@+id/ivStoreSpaceTwo"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/background_representante" />

            <ImageView
                android:id="@+id/ivAvatarBobStore"
                android:layout_width="328dp"
                android:layout_height="116dp"
                android:src="@drawable/store_avatar_two_image" />

            <ImageView
                android:id="@+id/ivButtonBuyBob"
                android:layout_width="515dp"
                android:layout_height="wrap_content"
                android:src="@drawable/store_buy_button" />

            <ImageView
                android:id="@+id/ivStoreSpaceThree"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/background_representante" />

            <ImageView
                android:id="@+id/ivAvatarDudaStore"
                android:layout_width="328dp"
                android:layout_height="116dp"
                android:src="@drawable/store_avatar_four_image" />

            <ImageView
                android:id="@+id/ivButtonBuyDuda"
                android:layout_width="515dp"
                android:layout_height="wrap_content"
                android:src="@drawable/store_buy_button" />

            <ImageView
                android:id="@+id/ivStoreSpaceFour"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:src="@drawable/background_representante" />

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/ivStoreToldo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/toldo_teste_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

</androidx.constraintlayout.widget.ConstraintLayout>
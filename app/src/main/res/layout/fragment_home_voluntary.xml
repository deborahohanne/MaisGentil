<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="codigoFragmento"
            type="br.iesb.mobile.gentil.ui.fragment.voluntary.HomeVoluntaryFragment" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        tools:context=".ui.fragment.representative.HomeRepresentativeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.fragment.representative.HomeRepresentativeFragment">

            <ImageView
                android:id="@+id/ivHomeVoluntaryLeaveButton"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.955"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logout" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHomeVoluntary"
                android:layout_width="323dp"
                android:layout_height="230dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:contentPadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeWidth="5dp">

                <TextView
                    android:id="@+id/tvHomeVoluntaryHelloName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="@string/txtHomeVoluntario"
                    android:textColor="#463F3F"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/ivHomeVoluntaryProfileImage"
                    android:layout_width="84dp"
                    android:layout_height="78dp"
                    android:layout_gravity="center_horizontal"
                    app:srcCompat="@drawable/avatarhomevoluntario" />

                <ImageView
                    android:id="@+id/ivHomeVoluntaryRewards"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom|center"
                    app:srcCompat="@drawable/gift_recompensas" />
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHomeVoluntaryInst"
                android:layout_width="363dp"
                android:layout_height="94dp"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#B4FFE6"
                app:cardCornerRadius="27dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:contentPadding="10dp"
                app:layout_anchor="@+id/constraintLayout2"
                app:layout_anchorGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardHomeVoluntaryDonate">

                <ImageView
                    android:id="@+id/ivIconInst"
                    android:layout_width="48dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center|clip_vertical|start"
                    android:layout_marginLeft="6dp"
                    app:srcCompat="@drawable/ic_inst_voluntary"
                    tools:layout_editor_absoluteX="139dp"
                    tools:layout_editor_absoluteY="284dp" />

                <TextView
                    android:id="@+id/tvHomeVoluntaryInstitutionsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="@string/txtDoacoes3"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvHomeVoluntaryInstitutionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="@string/txtInst1"
                    android:textColor="#222121"
                    android:textSize="18sp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHomeVoluntaryEvents"
                android:layout_width="363dp"
                android:layout_height="94dp"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#FFD1DB"
                app:cardCornerRadius="27dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:contentPadding="10dp"
                app:layout_anchor="@+id/constraintLayout2"
                app:layout_anchorGravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardHomeVoluntaryInst">

                <TextView
                    android:id="@+id/tvHomeVoluntaryNoticesTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="@string/txtNotiEve1"
                    android:textColor="#222121"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvHomeVoluntaryNoticesText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="@string/txtNotiEve2"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ivIconEvents"
                    android:layout_width="46dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center|clip_vertical|start"
                    android:layout_marginLeft="6dp"
                    app:srcCompat="@drawable/ic_people_voluntary"
                    tools:layout_editor_absoluteX="274dp"
                    tools:layout_editor_absoluteY="286dp" />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHomeVoluntaryDonate"
                android:layout_width="363dp"
                android:layout_height="94dp"
                android:layout_marginTop="28dp"
                app:cardBackgroundColor="#D3E7FF"
                app:cardCornerRadius="27dp"
                app:cardElevation="5dp"
                app:cardMaxElevation="8dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="false"
                app:contentPadding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardHomeVoluntary">

                <ImageView
                    android:id="@+id/ivIconDonate"
                    android:layout_width="50dp"
                    android:layout_height="47dp"
                    android:layout_gravity="center|clip_vertical|start"
                    android:layout_marginLeft="6dp"
                    app:srcCompat="@drawable/ic_donate_voluntary"
                    tools:layout_editor_absoluteX="44dp"
                    tools:layout_editor_absoluteY="284dp" />

                <TextView
                    android:id="@+id/tvHomeVoluntaryDonationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginBottom="35dp"
                    android:fontFamily="@font/poppinssemibold"
                    android:text="@string/txtSuasDoacoes1"
                    android:textColor="#222121"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvHomeVoluntaryDonationsText"
                    android:layout_width="268dp"
                    android:layout_height="16dp"
                    android:layout_gravity="bottom|center|left"
                    android:layout_marginLeft="65dp"
                    android:layout_marginBottom="15dp"
                    android:fontFamily="@font/poppinsregular"
                    android:text="@string/txtSuasDoacoes2"
                    android:textSize="12sp" />

            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:fabCradleMargin="0dp"
            app:fabCradleRoundedCornerRadius="10dp"
            app:fabCradleVerticalOffset="0dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:elevation="0dp"
                app:menu="@menu/bottom_bar_menu" />
        </com.google.android.material.bottomappbar.BottomAppBar>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bottom_menu_plus"
            app:backgroundTint="#4992EB"
            app:layout_anchor="@id/bottomAppBar" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
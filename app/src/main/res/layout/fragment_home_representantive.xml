<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="codigoFragmento"
            type="br.iesb.mobile.gentil.ui.fragment.representative.HomeRepresentantiveFragment"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEEEEE"
        tools:context=".ui.activity.representative.HomeRepresentativeActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/background"
            tools:context=".ui.activity.voluntary.HomeVoluntaryActivity">

            <ImageView
                android:id="@+id/ivHomeRepLeaveButton"
                android:layout_width="50dp"
                android:layout_height="24dp"
                android:layout_marginTop="7dp"
                app:layout_constraintBottom_toTopOf="@+id/ivHomeRepBackgroundProfile"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.93"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logout" />

            <TextView
                android:id="@+id/tvHomeRepSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/txtForYou"
                android:textColor="#1BA879"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.119"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivHomeRepBackgroundProfile" />

            <ImageView
                android:id="@+id/ivHomeRepBackgroundOne"
                android:layout_width="360dp"
                android:layout_height="130dp"
                android:layout_marginTop="4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.515"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHomeRepSubtitle"
                app:srcCompat="@drawable/suasdoacoes"
                tools:ignore="UnknownIdInLayout" />

            <ImageView
                android:id="@+id/ivHomeRepBackgroundThree"
                android:layout_width="360dp"
                android:layout_height="130dp"
                android:layout_marginBottom="72dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.484"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/bloconoticiashomevoluntario" />

            <TextView
                android:id="@+id/tvHomeVoluntaryNoticesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/txtNotiEve1"
                android:textColor="#222121"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/tvHomeVoluntaryNoticesText"
                app:layout_constraintEnd_toEndOf="@+id/ivHomeRepBackgroundThree"
                app:layout_constraintStart_toStartOf="@+id/ivHomeRepBackgroundThree"
                app:layout_constraintTop_toTopOf="@+id/ivHomeRepBackgroundThree" />

            <TextView
                android:id="@+id/tvHomeVoluntaryNoticesText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="43dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/txtNotiEve2"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivHomeRepBackgroundThree"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.488"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/ivHomeRepBackgroundProfile"
                android:layout_width="323dp"
                android:layout_height="256dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.084"
                app:srcCompat="@drawable/menubrancohome" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView4"
                android:name="br.iesb.mobile.gentil.ui.fragment.representative.HomeRepresentantiveFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivHomeRepBackgroundTwo"
                android:layout_width="360dp"
                android:layout_height="130dp"
                android:layout_marginBottom="6dp"
                app:layout_constraintBottom_toTopOf="@+id/ivHomeRepBackgroundThree"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.484"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivHomeRepBackgroundOne"
                app:srcCompat="@drawable/backgrounddonations_repr" />

            <ImageView
                android:id="@+id/ivHomeRepAvaliacao"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivHomeRepBackgroundProfile"
                app:layout_constraintEnd_toEndOf="@+id/ivHomeRepBackgroundProfile"
                app:layout_constraintStart_toStartOf="@+id/ivHomeRepBackgroundProfile"
                app:srcCompat="@drawable/avaliacoes_repr" />

            <ImageView
                android:id="@+id/ivHomeRepProfileImage"
                android:layout_width="84dp"
                android:layout_height="78dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/ivHomeRepBackgroundProfile"
                app:srcCompat="@drawable/homerepravatar" />

            <TextView
                android:id="@+id/tvHomeRepHelloName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/txtHomeRepr"
                android:textColor="#463F3F"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/ivHomeRepAvaliacao"
                app:layout_constraintEnd_toEndOf="@+id/ivHomeRepBackgroundProfile"
                app:layout_constraintStart_toStartOf="@+id/ivHomeRepBackgroundProfile"
                app:layout_constraintTop_toBottomOf="@+id/ivHomeRepProfileImage" />

            <TextView
                android:id="@+id/tvHomeRepDonationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/txtDoacoes1"
                android:textColor="#222121"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/ivHomeRepBackgroundThree"
                app:layout_constraintEnd_toEndOf="@+id/ivHomeRepBackgroundTwo"
                app:layout_constraintHorizontal_bias="0.311"
                app:layout_constraintStart_toStartOf="@+id/ivHomeRepBackgroundTwo"
                app:layout_constraintTop_toBottomOf="@+id/ivHomeRepBackgroundOne"
                app:layout_constraintVertical_bias="0.084" />

            <TextView
                android:id="@+id/tvHomeRepDonationText"
                android:layout_width="239dp"
                android:layout_height="19dp"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/txtDoacoes2"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/ivHomeRepBackgroundTwo"
                app:layout_constraintEnd_toEndOf="@+id/ivHomeRepBackgroundTwo"
                app:layout_constraintHorizontal_bias="0.677"
                app:layout_constraintStart_toStartOf="@+id/ivHomeRepBackgroundTwo"
                app:layout_constraintTop_toBottomOf="@+id/tvHomeRepDonationTitle"
                app:layout_constraintVertical_bias="0.093" />

            <TextView
                android:id="@+id/tvHomeRepNeedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinssemibold"
                android:text="@string/txtArrecad1"
                android:textColor="#222121"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/ivHomeRepBackgroundTwo"
                app:layout_constraintEnd_toEndOf="@+id/ivHomeRepBackgroundOne"
                app:layout_constraintHorizontal_bias="0.591"
                app:layout_constraintStart_toStartOf="@+id/ivHomeRepBackgroundOne"
                app:layout_constraintTop_toTopOf="@+id/ivHomeRepBackgroundOne"
                app:layout_constraintVertical_bias="0.26" />

            <TextView
                android:id="@+id/tvHomeRepNeedText"
                android:layout_width="243dp"
                android:layout_height="46dp"
                android:fontFamily="@font/poppinsregular"
                android:text="@string/txtArrecad2"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/ivHomeRepBackgroundTwo"
                app:layout_constraintEnd_toEndOf="@+id/ivHomeRepBackgroundOne"
                app:layout_constraintHorizontal_bias="0.731"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHomeRepNeedTitle"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:fabCradleMargin="0dp"
            app:fabCradleRoundedCornerRadius="10dp"
            app:fabCradleVerticalOffset="0dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:elevation="0dp"
                app:menu="@menu/bottom_bar_menu" />
        </com.google.android.material.bottomappbar.BottomAppBar>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bottom_menu_plus"
            app:backgroundTint="#4992EB"
            app:layout_anchor="@id/bottomAppBar" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>

